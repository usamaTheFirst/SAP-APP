@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row m-5 justify-content-center align-items-center">
    <div class="col-md-7">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Pno" class="form-control" aria-required="true" placeholder="Personnel Number" />
                <label asp-for="Input.Pno">Personnel Number</label>
                <span asp-validation-for="Input.Pno" class="text-danger"></span>
            </div>

            @*Adding new Fields Date : 08-03-2023*@
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Name" />
                <label asp-for="Input.Name">Name </label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Designation" class="form-control" aria-required="true" placeholder="Designation" />
                <label asp-for="Input.Designation">Designation </label>
                <span asp-validation-for="Input.Designation" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" aria-required="true" placeholder="Location" />
                <label asp-for="Input.Location">Location </label>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DepartmentId" class="form-control" aria-required="true" placeholder="Department Id" />
                <label asp-for="Input.DepartmentId">Department Id </label>
                <span asp-validation-for="Input.DepartmentId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.SectionId" class="form-control" aria-required="true" placeholder="Section Id" />
                <label asp-for="Input.SectionId">Section Id </label>
                <span asp-validation-for="Input.SectionId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DesignationId" class="form-control" aria-required="true" placeholder="Designation Id" />
                <label asp-for="Input.DesignationId">Designation Id </label>
                <span asp-validation-for="Input.DesignationId" class="text-danger"></span>
            </div>


            @*End of Additional Fields*@

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
